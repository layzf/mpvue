.modal {
  position: absolute;
  background-color: rgba(0, 0, 0, 0.6);
  width: 100%;
  top: 0;
  left: 0;
  z-index: 99;
  font-size: 26rpx;
  font-color: #999;
  display: flex;
  justify-content: flex-end;
  flex-direction: column;
}
.modal .modal_content {
  position: relative;
  transition: all .3s ease 0s;
  padding-top: 40rpx;
  background-color: #ffffff;
}
.modal .modal_content .item {
  padding-top: 20rpx;
  background-color: #ffffff;
  z-index: 99;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  padding-bottom: 40rpx;
  border-top: 2rpx solid rgba(180, 180, 180, 0.1);
}
.modal .modal_content .item .i_title {
  padding-left: 40rpx;
  font-size: 28rpx;
  font-weight: 600;
}
.modal .modal_content .item .radio-group {
  display: flex;
  justify-content: space-between;
  width: 95%;
  flex-wrap: wrap;
  margin: 0 auto;
}
.modal .modal_content .item .radio-group .radio {
  margin-left: 20rpx;
  margin-top: 20rpx;
}
.modal .modal_content .foot {
  background-color: #ffffff;
  display: flex;
  font-size: 30rpx;
}
.modal .modal_content .foot .clear {
  flex: 1;
  text-align: center;
  background-color: #E9E9E9;
  color: #999999;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}
.modal .modal_content .foot .confirm {
  flex: 1;
  border-left: 2rpx solid rgba(180, 180, 180, 0.3);
  text-align: center;
  background-color: #FF5D22;
  color: #ffffff;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}
.modal .modal_content .m_img {
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  top: 20rpx;
  right: 30rpx;
}
.showModal {
  transform: translateY(0);
}
.hideModal {
  transform: translateY(700rpx);
}
.hideBg {
  animation: hide .3s;
}
.pauseAnimation {
  animation: hide 0s !important;
}
@keyframes show {
from {
    background-color: rgba(0, 0, 0, 0);
}
to {
    background-color: rgba(0, 0, 0, 0.6);
}
}
@keyframes hide {
from {
    background-color: rgba(0, 0, 0, 0.6);
}
to {
    background-color: rgba(0, 0, 0, 0);
}
}
